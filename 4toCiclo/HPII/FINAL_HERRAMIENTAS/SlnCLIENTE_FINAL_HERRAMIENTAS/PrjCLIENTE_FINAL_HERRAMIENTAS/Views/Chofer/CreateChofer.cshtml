@model PrjCLIENTE_FINAL_HERRAMIENTAS.Models.Chofer

@{
    ViewData["Title"] = "CreateChofer";
}

<h1>CreateChofer</h1>

<h4>Chofer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateChofer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodChof" class="control-label"></label>
                <input asp-for="CodChof" class="form-control" />
                <span asp-validation-for="CodChof" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomChof" class="control-label"></label>
                <input asp-for="NomChof" class="form-control" />
                <span asp-validation-for="NomChof" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FecIng" class="control-label"></label>
                <input asp-for="FecIng" class="form-control" />
                <span asp-validation-for="FecIng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodCat" class="control-label"></label>
                <input asp-for="CodCat" class="form-control" />
                <span asp-validation-for="CodCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SdoBas" class="control-label"></label>
                <input asp-for="SdoBas" class="form-control" />
                <span asp-validation-for="SdoBas" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" /> |
                <a asp-action="IndexChofer">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <b>@ViewBag.mensaje</b>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
