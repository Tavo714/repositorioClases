@model PrjClienteFinalHerramientas.Models.Prestamo

@{
    ViewData["Title"] = "Editar Prestamo";
}

<h1>EditPrestamo</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPrestamo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrestamoId" class="control-label"></label>
                <input readonly="readonly" asp-for="PrestamoId" class="form-control" />
                <span asp-validation-for="PrestamoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <input asp-for="UsuarioId" class="form-control" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroId" class="control-label"></label>
                <input asp-for="LibroId" class="form-control" />
                <span asp-validation-for="LibroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoPrestamo" class="control-label"></label>
                <input asp-for="TiempoPrestamo" class="form-control" />
                <span asp-validation-for="TiempoPrestamo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="IndexPrestamo">Regresar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <b>@ViewBag.mensaje</b>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
